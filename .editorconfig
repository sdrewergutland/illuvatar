#   Usage:
#   1. Make sure the plugin is installed as described here: https://www.jetbrains.com/help/phpstorm/configuring-code-style.html#editorconfig
#   2. Make sure File > Settings Â· Editor > Code Style > EditorConfigSupport enabled is checked

#   Resources:
#       http://EditorConfig.org
#       https://www.php-fig.org/psr/psr-12/
#       https://github.com/pimcore/pimcore/blob/10.x/.editorconfig
#       https://git.typo3.org/typo3/typo3/-/blob/main/.editorconfig
#       https://www.jetbrains.com/help/phpstorm/configuring-code-style.html#editorconfig
#       https://twitter.com/fabpot/status/1147776616325627904
#       https://github.com/dunglas/symfony-docker/blob/main/.editorconfig


[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,html,ts,tsx,css,sass,scss,less,svg,vue}]
indent_style = space
indent_size = 4

[*.{ts,tsx}]
max_line_length = 140

[*.sh]
indent_style = tab
indent_size = 4

[*.xml{,.dist}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[.gitmodules]
indent_style = tab
indent_size = 4

[.php_cs{,.dist}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.sql]
indent_style = tab
indent_size = 2

[{_.htaccess,.htaccess}]
indent_style = tab

[composer.json]
indent_style = space
indent_size = 4

[docker-compose{,.*}.{yaml,yml}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = tab
indent_size = 4

[*.svg]
insert_final_newline = false
